<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#f8f8f2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regular_broadcasts"
        android:textStyle="bold"
        android:textSize="@dimen/text_view_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/text_view_bottom_margin"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_serializable_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/serializable"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_parcelable_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/parcelable"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_custom_serialzable"
        android:layout_gravity="center_horizontal"
        android:text="serializable_custom"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/local_broadcast_manager_broadcasts"
        android:textStyle="bold"
        android:textSize="@dimen/text_view_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/text_view_bottom_margin"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_local_broadcast_serializable_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/local_broadcast_serializable"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_local_broadcast_parcelable_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/local_broadcast_parcelable"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_local_custom_serializable"
        android:layout_gravity="center_horizontal"
        android:text="serializable_custom"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loops"
        android:textStyle="bold"
        android:textSize="@dimen/text_view_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/text_view_bottom_margin"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_for_loop_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/for_loop"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_for_each_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/for_each"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/main_while_loop_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/while_loop"
        android:textAllCaps="false"/>
</LinearLayout>